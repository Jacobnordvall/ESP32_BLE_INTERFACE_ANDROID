<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#FFFFFF"
    android:onClick="ledSwitchToggle"
    android:textAlignment="center"
    tools:context=".MainActivity"
    tools:ignore="DuplicateSpeakableTextCheck">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topHeaderConstraintLayout"
        android:layout_width="411dp"
        android:layout_height="55dp"
        android:background="@drawable/rounded_top_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/AppNameText"
            android:layout_width="253dp"
            android:layout_height="28dp"
            android:clickable="false"
            android:fontFamily="@font/google_sans"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textAlignment="viewStart"
            android:textColor="@color/TextColorHeader"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/resyncButton"
            app:layout_constraintHorizontal_bias="0.58"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.58000004"
            tools:ignore="TextSizeCheck" />

        <ImageButton
            android:id="@+id/saveButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="15dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:onClick="clickSave"
            android:paddingStart="0dp"
            android:paddingEnd="5sp"
            android:scaleX="1.05"
            android:scaleY="1.05"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.72"
            app:srcCompat="@drawable/book_icon"
            app:tint="@color/TextColorHeader" />

        <ImageButton
            android:id="@+id/resyncButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:onClick="clickReload"
            android:paddingStart="5sp"
            android:paddingEnd="0sp"
            android:scaleX="1.25"
            android:scaleY="1.25"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/saveButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.72"
            app:srcCompat="@drawable/refresh_icon"
            app:tint="@color/TextColorHeader" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/ContentScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topHeaderConstraintLayout"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.utils.widget.MockView
                android:id="@+id/topSpacer"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:visibility="invisible"
                tools:visibility="visible" />

            <FrameLayout
                android:id="@+id/LedSwitchLayout"
                android:layout_width="match_parent"
                android:layout_height="65dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ledSwitchExpand"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/custom_ripple"
                    android:drawableLeft="@drawable/light_icon"
                    android:drawableRight="@drawable/arrow_down_icon"
                    android:drawableTint="@color/TextColor"
                    android:fontFamily="@font/google_sans"
                    android:foregroundGravity="fill"
                    android:onClick="ledSwitchToggleExpand"
                    android:paddingStart="25dp"
                    android:paddingEnd="110dp"
                    android:text=" Builtin led"
                    android:textAlignment="viewStart"
                    android:textColor="@color/TextColor"
                    android:textSize="18sp"
                    app:backgroundTint="@color/AppBackgroundColor"
                    app:rippleColor="@color/AppBackgroundColorTinted"
                    tools:ignore="RtlHardcoded" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/ledSwitchToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_gravity="end"
                    android:checked="false"
                    android:onClick="ledSwitchToggle"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:textSize="18sp"
                    android:visibility="visible"
                    app:thumbTint="@color/AppBackgroundColorTinted" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/ledSwitchExpandedLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:visibility="visible">

                <FrameLayout
                    android:id="@+id/FrameLayoutLedmode"
                    android:layout_width="match_parent"
                    android:layout_height="65dp">

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_ripple"
                        android:fontFamily="@font/google_sans"
                        android:onClick="ledSwitchModeSelect"
                        android:paddingStart="30dp"
                        android:paddingBottom="30dp"
                        android:text="Led mode"
                        android:textAlignment="viewStart"
                        android:textColor="@color/TextColorTitle"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/ledmodeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/google_sans"
                        android:paddingStart="30dp"
                        android:paddingTop="30dp"
                        android:text="Static"
                        android:textColor="@color/TextColorTinted"
                        android:textSize="16sp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/FrameLayoutSliderBrightness"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <Button
                        android:id="@+id/RippleButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_ripple"
                        android:contentDescription="@string/app_name" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/brightnessText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:fontFamily="@font/google_sans"
                        android:paddingStart="30dp"
                        android:paddingEnd="0dp"
                        android:text="Brightness"
                        android:textAlignment="viewStart"
                        android:textColor="@color/TextColorTitle"
                        android:textSize="16sp"
                        android:translationY="10dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/brightnessValue"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="@font/google_sans"
                        android:paddingStart="30dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="0dp"
                        android:text="0%"
                        android:textAlignment="viewStart"
                        android:textColor="@color/TextColorTinted"
                        android:textSize="16sp"
                        android:translationY="30dp" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/seekBarBrightness"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:contentDescription="@string/app_name"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:stepSize="1"
                        android:translationY="65dp"
                        android:value="3"
                        android:valueFrom="3"
                        android:valueTo="255"
                        app:haloRadius="1dp"
                        app:labelBehavior="gone"
                        app:thumbColor="@color/MainColor"
                        app:thumbElevation="0dp"
                        app:thumbRadius="14dp"
                        app:tickColor="@color/white"
                        app:tickVisible="false"
                        app:trackColorActive="@color/MainColor"
                        app:trackColorInactive="@color/AppBackgroundColorTinted"
                        app:trackHeight="28dp" />
                </FrameLayout>

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/TextForDebug"
                android:layout_width="match_parent"
                android:layout_height="900dp"
                android:paddingTop="50sp"
                android:text="Received: "
                android:textAlignment="center"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>